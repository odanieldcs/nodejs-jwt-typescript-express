{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2019",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "rootDirs": ["./src", "./tests"],
    "typeRoots": ["./types", "./node_modules/@types"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "plugins": [{ "transform": "typescript-transform-paths" }]
  },
  "include": ["./src", "./types", "./tests"],
  "exclude": []
}
